  
{
	"compilerOptions": {
		"lib": [
			"dom",
			"es6"
		],
		"outDir": "./lib/esm",
		"target": "ES2015",
		"module": "ES2020",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strictNullChecks": true,
		"removeComments": true,
		"declaration": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"typeRoots": [
			"index.d.ts",
			"node_modules/@types/index.d.ts"
		]
	},
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}